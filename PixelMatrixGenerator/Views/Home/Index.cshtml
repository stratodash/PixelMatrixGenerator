@model IndexModel
@{
    int count = 0;
}
@{
    ViewBag.Title = "Pixel Boxes";
}

@using (Html.BeginForm("Index", "Home", FormMethod.Post, new {style = "height: 100%; width: 100%"}))
{
<div style="height: 100%; width: 100%">
    <table style="width: 100%; height: 90%">
        @for (int j = 0; j < 10; j++)
        {
            <tr>
                @for (int i = 0; i < 10; i++)
                {
                    <td>
                        @Html.CheckBoxFor(model => model.checkBoxes[count])
                        @Html.Hidden("model.checkBoxes["+count+"]", false);
                    </td>
                    count++;
                }
            </tr>
        }
    </table>
    <div style="height: 9%; margin-top: 1%">
        <table style="width: 100%; align-items: center; text-align: center; height: 100%">
            <tr>
                <td style="width: 100%">
                    <button id="submitGrid" style="height: 100%; width: 100%">Convert To String</button>
                </td>
            </tr>
            <tr>
                <td style="width: 100%">
                    @Model.pixelString
                </td>
            </tr>
        </table>
    </div>
</div>
}

<script src="js/indexscript.js" type="text/javascript"></script>